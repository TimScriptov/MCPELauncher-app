{
  "namespace": "anvil",

  //---------------------------------------------------------------------------
  // #region common items
  //---------------------------------------------------------------------------

  "debug": {
    "type": "image",
    "anchor_from": "center", // the parent
    "anchor_to": "center", // this control
    "texture": "gui/bg32.png",
    "alpha": 0.2,
    "uv": [ 0, 0 ],
    "uv_size": [ 1, 1 ]
  },

  "generic_label": {
    "type": "label",
    "size": [ 1, 1 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "alignment": "top_left",
    "text": "???",
    "color": [ 0.25, 0.25, 0.25, 1.0 ],
    "layer": 1
  },

  // #endregion

  //---------------------------------------------------------------------------
  // #region icon and text area (top quarter of screen)
  //---------------------------------------------------------------------------
  "anvil_icon": {
    "type": "image",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "texture": "gui/newgui/anvil-hammer.png",
    "size": [ 28, 28 ],
    "uv": [ 0, 0 ],
    "uv_size": [ 15, 15 ],
    "nineslice_size": 0.0,
    "layer": 1
  },

  "title_label@anvil.generic_label": {
    "anchor_from": "bottom_left", // the parent
    "anchor_to": "bottom_left", // this control
    "alignment": "left_middle",
    "text": "container.repair"
  },

  // panel to position the icon
  "anvil_icon_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      { "@anvil.anvil_icon": { } }
    ]
  },

  "text_edit_control@common.text_edit_box": {
    "anchor_from": "top_left", // the parent
    "anchor_to": "top_left", // this control
    "max_length": 30
  },

  // panel to position the top quarter of screen
  "icon_and_text_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", "40%" ],
    "offset": [ 0, "5%" ],
    "controls": [
      { "@anvil.anvil_icon_panel": { } },
      { "@anvil.anvil_title_and_text_panel": { } }
    ]
  },

  // panel for the title label
  "title_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", "40%" ],
    "offset": [ 1, 0 ],
    "controls": [
      { "@anvil.title_label": { } }
    ]
  },

  // panel for the text edit box
  "text_edit_panel": {
    "type": "panel",
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "size": [ "100%", "50%" ],
    "controls": [
      { "@anvil.text_edit_control": { } }
    ]
  },

  // panel to position title label and text edit control
  "anvil_title_and_text_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "82%", "100%" ],
    "offset": [ "18%", 0 ],
    "controls": [
      { "@anvil.title_panel": { } },
      { "@anvil.text_edit_panel": { } }
    ]
  },

  //#endregion

  //---------------------------------------------------------------------------
  // #region recipe (input, material and results) area (2nd quarter of screen)
  //---------------------------------------------------------------------------

  "plus_sign_icon": {
    "type": "image",
    "texture": "gui/newgui/anvil-plus.png",
    "size": [ 18, 18 ],
    "uv": [ 0, 0 ],
    "uv_size": [ 13, 13 ]
  },

  "arrow_icon": {
    "type": "image",
    "texture": "gui/newgui/anvil-arrow.png",
    "size": [ 18, 12 ],
    "uv": [ 0, 0 ],
    "uv_size": [ 22, 15 ]
  },

  "cross_out_icon": {
    "type": "image",
    "texture": "gui/newgui/anvil-crossout.png",
    "size": [ 18, 12 ],
    "uv": [ 0, 0 ],
    "uv_size": [ 15, 15 ],
    "bindings": [
      {
        "binding_name": "#cross_out_icon",
        "binding_name_override": "#visible"
      }
    ]
  },

  "item_input_icon@common.item_renderer": {
    "binding_collection_name": "anvil_input_items",
    "bindings": [
      {
        "binding_name": "#item_id_aux",
        "binding_type": "collection"
      }
    ]
  },

  "item_input_foil@common.item_foil_renderer": {
    "binding_collection_name": "anvil_input_items",
    "bindings": [
      {
        "binding_name": "#item_id_aux",
        "binding_type": "collection"
      }
    ]
  },

  "item_output_icon@common.item_renderer": {
    "binding_collection_name": "anvil_output_item",
    "bindings": [
      {
        "binding_name": "#item_id_aux",
        "binding_type": "collection"
      }
    ]
  },

  "item_output_foil@common.item_foil_renderer": {
    "binding_collection_name": "anvil_output_item",
    "bindings": [
      {
        "binding_name": "#item_id_aux",
        "binding_type": "collection"
      }
    ]
  },

  // #region input item

  "input_button@common.inventory_slot_button_prototype": {
    "layer": 2,
    "binding_collection_name": "anvil_input_items",
    "controls": [{
      "hover@common.highlight_slot": {
        "controls": [
          {"hover_text@common.hover_text": {
            "binding_collection_name": "anvil_input_items",
            "bindings": [
              {"binding_name": "#hover_text",
              "binding_type": "collection"
              }
            ]
          }}
        ]
      }}
    ]
  },

  //#endregion

  //#region output item

  "output_button": {
    "type": "button",
    "layer": 2,
    "focus_enabled": true,
    "hover_control": "hover",
    "binding_collection_name": "anvil_output_item",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.anvil_out_take_all",
        "condition": "hover"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.anvil_out_take_all",
        "condition": "focus"
      },
      {
        "from_button_id": "button.menu_secondary_select",
        "to_button_id": "button.anvil_out_take_one",
        "condition": "hover"
      },
      {
        "from_button_id": "button.controller_select",
        "to_button_id": "button.anvil_out_take_one",
        "condition": "focus"
      },
      {
        "from_button_id": "button.menu_auto_place",
        "to_button_id": "button.anvil_out_auto_place_max",
        "condition": "hover"
      },
      {
        "from_button_id": "button.controller_secondary_select",
        "to_button_id": "button.anvil_out_auto_place_max",
        "condition": "focus"
      },
      {
        "from_button_id": "button.menu_inventory_drop",
        "to_button_id": "button.anvil_out_drop_all",
        "condition": "hover"
      },
      {
        "from_button_id": "button.menu_inventory_drop_all",
        "to_button_id": "button.anvil_out_drop_all",
        "condition": "hover"
      }
    ],
    "controls": [
      {
        "hover@common.highlight_slot": {
          "controls": [
            {
              "hover_text@common.hover_text": {
                "binding_collection_name": "anvil_output_item",
                "bindings": [
                  {
                    "binding_name": "#hover_text",
                    "binding_type": "collection"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  //#endregion

  "recipe_grid_item": {
    "type": "grid_item",
    "size": [ 18, 18 ]
  },

  "recipe_grid": {
    "type": "grid",
    "size": [ "90%", "90%" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "grid_dimensions": [ 5, 1 ],
    "controls": [
      {
        "@anvil.recipe_grid_item": {
          "grid_position": [ 0, 0 ],
          "controls": [
            { "@common.cell_image": { } },
            { "@anvil.item_input_icon": { } },
            { "@anvil.item_input_foil": { } },
            { "@anvil.input_button": { } },
            {
              "@common.stack_count_label": {
                "binding_collection_name": "anvil_input_items"
              }
            },
            {
              "@common.durability_bar": {
                "binding_collection_name": "anvil_input_items"
              }
            }
          ]
        }
      },
      {
        "": {
          "type": "grid_item",
          "grid_position": [ 1, 0 ],
          "anchor_from": "center",
          "anchor_to": "center",
          "controls": [
            { "@anvil.plus_sign_icon": { } }
          ]
        }
      },
      {
        "@anvil.recipe_grid_item": {
          "grid_position": [ 2, 0 ],
          "controls": [
            { "@common.cell_image": { } },
            { "@anvil.item_input_icon": { } },
            { "@anvil.item_input_foil": { } },
            { "@anvil.input_button": { } },
            {
              "@common.stack_count_label": {
                "binding_collection_name": "anvil_input_items"
              }
            },
            {
              "@common.durability_bar": {
                "binding_collection_name": "anvil_input_items"
              }
            }
          ]
        }
      },
      {
        "": {
          "type": "grid_item",
          "grid_position": [ 3, 0 ],
          "anchor_from": "center",
          "anchor_to": "center",
          "controls": [
            { "@anvil.arrow_icon": { } },
            {
              "@anvil.cross_out_icon": {
                "layer": 1
              }
            }
          ]
        }
      },
      {
        "@anvil.recipe_grid_item": {
          "grid_position": [ 4, 0 ],
          "controls": [
            { "@common.cell_image": { } },
            { "@anvil.item_output_icon": { } },
            { "@anvil.item_output_foil": { } },
            { "@anvil.output_button": { } },
            {
              "@common.stack_count_label": {
                "binding_collection_name": "anvil_output_item"
              }
            },
            {
              "@common.durability_bar": {
                "binding_collection_name": "anvil_output_item"
              }
            }
          ]
        }
      }
    ]
  },

  "cost_label@anvil.generic_label": {
    "size": [ 1, 1 ],
    "shadow": true,
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "offset": [ 0, -8 ],
    "alignment": "bottom_right",
    "color": "#ff00ff",
    "text": "#text"
  },

  "recipe_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", "60%" ],
    "offset": [ 0, "40%" ],
    "controls": [
      { "@anvil.recipe_grid": { } },
      {
        "@anvil.cost_label": {
          "color": [ 1.0, 0.37, 0.37, 1.0 ],
          "bindings": [
            {
              "binding_name": "#cost_text",
              "binding_name_override": "#text"
            },
            {
              "binding_name": "#cost_text_red",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "@anvil.cost_label": {
          "color": [ 0.5, 1.0, 0.125, 1.0 ],
          "bindings": [
            {
              "binding_name": "#cost_text",
              "binding_name_override": "#text"
            },
            {
              "binding_name": "#cost_text_green",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  // #endregion

  //---------------------------------------------------------------------------
  // #region inventory area
  //---------------------------------------------------------------------------

  "inventory_label@anvil.generic_label": {
    "offset": [ 0, 67 ],
    "text": "container.inventory"
  },

  // #endregion

  //---------------------------------------------------------------------------
  // #region screen
  //---------------------------------------------------------------------------

  "gamepad_helpers": {
    "type": "panel",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ "98%", 16 ],
    "controls": [
      {
        "@common.gamepad_helper_a": {
          "size": [ 36, "100%" ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle"
        }
      },
      {
        "@common.gamepad_helper_b": {
          "offset": [ 36, 0 ],
          "size": [ 72, "100%" ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle"
        }
      },
      {
        "@common.gamepad_helper_x": {
          "offset": [ -100, 0 ],
          "size": [ 72, "100%" ],
          "anchor_from": "right_middle",
          "anchor_to": "right_middle"
        }
      },
      {
        "@common.gamepad_helper_y": {
          "size": [ 100, "100%" ],
          "offset": [ -10, 0 ],
          "anchor_from": "right_middle",
          "anchor_to": "right_middle"
        }
      }
    ]
  },

  "top_half_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100% - 14px", "50% - 14px" ],
    "offset": [ 7, 7 ],
    "controls": [
      { "@anvil.inventory_label": { } },
      { "@anvil.icon_and_text_panel": { } },
      { "@anvil.recipe_panel": { } }
    ]
  },

  "screen@common.inventory_screen_common": {
    "controls": [
      {"@furnace.gamepad_helpers": {}},
      { "@common.screen_background": { } },
      {
        "@common.root_panel": {
          "layer": 1,
          "controls": [
            { "@common.input_panel": { } },
            { "@common.common_panel": { } },
            {
              "anvil_screen_inventory": {
                "type": "panel",
                "layer": 5,
                "controls": [
                  { "@anvil.top_half_panel": { } },
                  { "@common.inventory_panel_bottom_half": { } },
                  { "@common.inventory_hold_icon_button": { } }
                ]
              }
            },
            { "@common.inventory_selected_icon_button": { } },
            { "@common.inventory_selected_foil_button": { } }
          ]
        }
      }
    ]
  }
}

// #endregion

