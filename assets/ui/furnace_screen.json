{
  "namespace": "furnace",

  "gamepad_helpers": {
    "type": "panel",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ "98%", 16 ],
    "controls": [
      {
        "@common.gamepad_helper_a": {
          "size": [ 36, "100%" ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle"
        }
      },
      {
        "@common.gamepad_helper_b": {
          "offset": [ 36, 0 ],
          "size": [ 72, "100%" ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle"
        }
      },
      {
        "@common.gamepad_helper_x": {
          "offset": [ -100, 0 ],
          "size": [ 72, "100%" ],
          "anchor_from": "right_middle",
          "anchor_to": "right_middle"
        }
      },
      {
        "@common.gamepad_helper_y": {
          "size": [ 100, "100%" ],
          "offset": [ -10, 0 ],
          "anchor_from": "right_middle",
          "anchor_to": "right_middle"
        }
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Furnace
  //---------------------------------------------------------------------------

  "furnace_arrow_empty_image": {
    "type": "image",
    "layer": 1,
    "texture": "gui/spritesheet.png",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ 22, 15 ],
    "uv": [ 73, 20 ],
    "uv_size": [ 22, 15 ]
  },

  "furnace_arrow_full_image": {
    "type": "image",
    "layer": 3,
    "texture": "gui/spritesheet.png",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ 22, 15 ],
    "uv": [ 73, 36 ],
    "uv_size": [ 22, 15 ],
    "nineslice_size": 0.0,
    "clip_direction": "left",
    "bindings": [
      {
        "binding_name": "#furnace_arrow_ratio",
        "binding_name_override": "#clip_ratio"
      }
    ]
  },

  "flame_empty_image": {
    "type": "image",
    "texture": "gui/spritesheet.png",
    "layer": 2,
    "uv": [ 41, 21 ],
    "uv_size": [ 13, 13 ]
  },

  "flame_full_image": {
    "type": "image",
    "texture": "gui/spritesheet.png",
    "layer": 3,
    "uv": [ 57, 21 ],
    "uv_size": [ 13, 13 ],
    "nineslice_size": 0.0,
    "clip_direction": "down",
    "bindings": [
      {
        "binding_name": "#furnace_flame_ratio",
        "binding_name_override": "#clip_ratio"
      }
    ]
  },

  "furnace_input_icon@common.item_renderer": {
    "binding_collection_name": "furnace_input_items",
    "bindings": [
      {
        "binding_name": "#item_id_aux",
        "binding_type": "collection"
      }
    ]
  },

  "furnace_input_foil@common.item_foil_renderer": {
    "binding_collection_name": "furnace_input_items",
    "bindings": [
      {
        "binding_name": "#item_id_aux",
        "binding_type": "collection"
      }
    ]
  },

  "furnace_output_icon@common.item_renderer": {
    "bindings": [
      {
        "binding_name": "#furnace_output_item",
        "binding_name_override": "#item_id_aux"
      }
    ]
  },

  "furnace_output_foil@common.item_foil_renderer": {
    "bindings": [
      {
        "binding_name": "#furnace_output_item",
        "binding_name_override": "#item_id_aux"
      }
    ]
  },

  "furnace_input_button@common.inventory_slot_button_prototype": {
    "layer": 2,
    "binding_collection_name": "furnace_input_items",
    "controls": [
      {
        "hover@common.highlight_slot": {
          "controls": [
            {
              "hover_text@common.hover_text": {
                "binding_collection_name": "furnace_input_items",
                "bindings": [
                  {
                    "binding_name": "#hover_text",
                    "binding_type": "collection"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "furnace_output_button": {
    "type": "button",
    "layer": 2,
    "focus_enabled": true,
    "hover_control": "hover",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.furnace_out_take_all",
        "condition": "hover"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.furnace_out_take_all",
        "condition": "focus"
      },
      {
        "from_button_id": "button.menu_secondary_select",
        "to_button_id": "button.furnace_out_take_one",
        "condition": "hover"
      },
      {
        "from_button_id": "button.controller_select",
        "to_button_id": "button.furnace_out_take_one",
        "condition": "focus"
      },
      {
        "from_button_id": "button.menu_auto_place",
        "to_button_id": "button.furnace_out_auto_place_max",
        "condition": "hover"
      },
      {
        "from_button_id": "button.controller_secondary_select",
        "to_button_id": "button.furnace_out_auto_place_max",
        "condition": "focus"
      },
      {
        "from_button_id": "button.menu_inventory_drop",
        "to_button_id": "button.furnace_out_drop_one",
        "condition": "hover"
      },
      {
        "from_button_id": "button.menu_inventory_drop_all",
        "to_button_id": "button.furnace_out_drop_all",
        "condition": "hover"
      },
      {
        "from_button_id": "button.menu_double_select",
        "to_button_id": "button.furnace_out_coalesce_stack",
        "condition": "hover"
      }
    ],
    "controls": [
      {
        "hover@common.highlight_slot": {
          "size": [ 24, 24 ],
          "controls": [
            {
              "@common.hover_text": {
                "bindings": [
                  {
                    "binding_name": "#furnace_output_hover_text",
                    "binding_name_override": "#hover_text"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Screens
  //---------------------------------------------------------------------------

  "furnace_label": {
    "type": "label",
    "size": [ 41, 7 ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "alignment": "center",
    "text": "container.furnace",
    "color": [ 0.25, 0.25, 0.25, 1.0 ],
    "layer": 2
  },

  "furnace_grid_item": {
    "type": "grid_item",
    "size": [ 18, 18 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left"
  },

  "furnace_input_grid": {
    "type": "grid",
    "size": [ 20, "80%" ],
    "anchor_from": "right_middle",
    "anchor_to": "right_middle",
    "offset": [ -15, 0 ],
    "grid_dimensions": [ 1, 3 ],
    "controls": [
      {
        "input_grid_item@furnace_grid_item": {
          "grid_position": [ 0, 0 ],
          "controls": [
            { "@common.cell_image": { } },
            { "@furnace_input_icon": { } },
            { "@furnace_input_foil": { } },
            { "@furnace_input_button": { } },
            {
              "@common.stack_count_label": {
                "binding_collection_name": "furnace_input_items"
              }
            },
            {
              "@common.durability_bar": {
                "binding_collection_name": "furnace_input_items"
              }
            }
          ]
        }
      },
      {
        "flame_grid_item@furnace_grid_item": {
          "grid_position": [ 0, 1 ],
          "size": [ 14, 14 ],
          "anchor_to": "center",
          "anchor_from": "center",
          "offset": [ -1.25, 0 ],
          "controls": [
            { "@flame_empty_image": { } },
            { "@flame_full_image": { } }
          ]
        }
      },
      {
        "fuel_grid_item@furnace_grid_item": {
          "grid_position": [ 0, 2 ],
          "controls": [
            { "@common.cell_image": { } },
            { "@furnace_input_icon": { } },
            { "@furnace_input_foil": { } },
            { "@furnace_input_button": { } },
            {
              "@common.stack_count_label": {
                "binding_collection_name": "furnace_input_items"
              }
            },
            {
              "@common.durability_bar": {
                "binding_collection_name": "furnace_input_items"
              }
            }
          ]
        }
      }
    ]
  },

  "furnace_input_panel": {
    "type": "panel",
    "size": [ "50%", "100%" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      { "@furnace_input_grid": { } }
    ]
  },

  "furnace_output_panel": {
    "type": "panel",
    "size": [ "50%", "100%" ],
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "controls": [
      {
        "output_item@furnace_grid_item": {
          "type": "panel",
          "size": [ 26, 26 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "offset": [ 20, 0 ],
          "controls": [
            { "@common.cell_image": { } },
            { "@furnace_output_icon": { 
              "offset": [ 5, 3.5 ]
            } },
            { "@furnace_output_foil": { 
              "offset": [ 5, 3.5 ]
            } },
            { "@furnace_output_button": { } },
            {
              "@common.stack_count_label": {
                "bindings": [
                  {
                    "binding_name": "#furnace_output_item_stack_count",
                    "binding_name_override": "#inventory_stack_count"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "furnace_panel_top_half": {
    "type": "panel",
    "size": [ "100%", "50% - 12px" ],
    "offset": [ 0, 7 ],
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "controls": [
      { "@furnace_label": { } },
      { "input@furnace_input_panel": { } },
      {
        "@furnace_arrow_empty_image": {
          "anchor_to": "center",
          "anchor_from": "center"
        }
      },
      {
        "@furnace_arrow_full_image": {
          "anchor_to": "center",
          "anchor_from": "center"
        }
      },
      { "output@furnace_output_panel": { } }
    ]
  },

  "screen@common.inventory_screen_common": {
    "controls": [
      { "@furnace.gamepad_helpers": { } },
      { "@common.screen_background": { } },
      {
        "@common.root_panel": {
          "layer": 1,
          "controls": [
            { "@common.input_panel": { } },
            { "@common.common_panel": { } },
            {
              "furnace_screen_inventory": {
                "type": "panel",
                "layer": 5,
                "controls": [
                  { "@furnace.furnace_panel_top_half": { } },
                  { "@common.inventory_panel_bottom_half_with_label": { } },
                  { "@common.inventory_hold_icon_button": { } }
                ]
              }
            },
            { "@common.inventory_selected_icon_button": { } },
            { "@common.inventory_selected_foil_button": { } }
          ]
        }
      }
    ]
  }
}