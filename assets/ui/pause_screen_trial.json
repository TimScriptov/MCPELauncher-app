{
  "namespace": "pauseTrial",

  "screen": {
    "type": "screen",
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "condition": "none"
      },
      {
        "from_button_id": "button.menu_up",
        "to_button_id": "button.menu_up",
        "condition": "none",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_down",
        "to_button_id": "button.menu_down",
        "condition": "none",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_left",
        "to_button_id": "button.menu_left",
        "condition": "none",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_right",
        "to_button_id": "button.menu_right",
        "condition": "none",
        "scope": "view"
      }
    ],
    "controls": [
      {
        "menu_background": {
          "type": "custom",
          "renderer": "background_renderer"
        }
      },
      {
        "trialTime": {
          "type": "custom",
          "renderer": "trial_time_renderer",
          "size": [ 0 , 10 ],
          "offset": [ -5, 5 ],
          "alignment": "top_right",
          "layer": 2,
          "anchor_from": "top_right",
          "anchor_to": "top_right"
        }
      },
      {
        "button_panel": {
          "type": "panel",
          "size": [ 150, 64 ],
          "offset": [ 0, -10 ],
          "anchor_from": "center",
          "anchor_to": "center",
          "controls": [
            {
              "game_menu": {
                "type": "label",
                "size": [ 50, 10 ],
                "offset": [ 0, -10 ],
                "alignment": "center",
                "layer": 2,
                "text": "menu.game",
                "anchor_from": "top_middle",
                "anchor_to": "top_middle"
              }
            },
            {
              "returnToGame@common.button": {
                "anchor_to": "top_left",
                "anchor_from": "top_left",
                "size": [ 160, 20 ],
                "button_mappings": [
                  {
                    "from_button_id": "button.menu_select",
                    "to_button_id": "button.menu_continue",
                    "condition": "hover"
                  },
                  {
                    "from_button_id": "button.menu_ok",
                    "to_button_id": "button.menu_continue",
                    "condition": "focus"
                  }
                ],
                "controls": [
                  {
                    "default@common.button_default_state": {
                      "uv": [ 0, 66 ],
                      "controls": [
                        {
                          "@common.button_text": {
                            "text": "menu.returnToGame"
                          }
                        }
                      ]
                    }
                  },
                  {
                    "hover@common.button_default_state": {
                      "controls": [
                        {
                          "@common.button_text": {
                            "text": "menu.returnToGame",
                            "color": [ 1.0, 1.0, 0.2 ]
                          }
                        }
                      ]
                    }
                  },
                  {
                    "pressed@common.button_default_state": {
                      "alpha": 0.65,
                      "controls": [
                        {
                          "@common.button_text": {
                            "text": "menu.returnToGame",
                            "color": [ 1.0, 1.0, 0.2 ],
                            "alpha": 0.65
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
