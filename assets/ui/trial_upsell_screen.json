{
  "namespace": "trialUpsell",

  "menu_background": {
    "type": "custom",
    "renderer": "background_renderer"
  },

  "normal_stroke_button": {
    "type": "image",
    "texture": "gui/newgui/NormalButtonStroke.png",
    "layer": 2,
    "nineslice_size": 4.0,
    "uv": [ 0, 0 ],
    "uv_size": [ 12, 12 ]
  },

  "normal_description_label": {
    "type": "label",
    "color": [ 0.25, 0.25, 0.25, 1.0 ],
    "alignment": "top_left",
    "wrap": true,
    "anchor_from": "center",
    "anchor_to": "center",
    "layer": 2
  },

  "trialTime": {
    "type": "custom",
    "renderer": "trial_time_renderer",
    "size": [0, 10],
    "offset": [ 0, "1%"],
    "alignment": "top_right",
    "layer": 3,
    "anchor_from": "top_left",
    "anchor_to": "top_left"
  },

  "trial_label": {
    "type": "label",
    "offset": [ 0, "3%" ],
    "color": [ 0.25, 0.25, 0.25, 1.0 ],
    "alignment": "top_middle",
    "layer": 2,
    "text": "trial.upsell.trialLabel",
    "anchor_from": "center",
    "anchor_to": "center"
  },

  "trial_description_panel": {
    "type": "panel",
    "size": [ "94%", "100%" ],
    "offset": [ 0, "15%"],
    "controls": [
      { "description_text@normal_description_label": { "text": "trial.upsell.description" } }
    ]
  },

  "trial_expired_description_panel": {
    "type": "panel",
    "size": [ "94%", "100%" ],
    "offset": [ 0, "15%" ],
    "controls": [
      { "line1@normal_description_label": { "text": "trial.upsell.expiredDescription.line1" } },
      { "line2@normal_description_label": { "offset": [ 0, "23%" ], "text": "trial.upsell.expiredDescription.line2" } },
      { "line3@normal_description_label": { "offset": [ 0, "30%" ], "text": "trial.upsell.expiredDescription.line3" } },
      { "line4@normal_description_label": { "offset": [ 0, "37%" ], "text": "trial.upsell.expiredDescription.line4" } },
      { "line5@normal_description_label": { "offset": [ 0, "44%" ], "text": "trial.upsell.expiredDescription.line5" } }
    ]
  },

  "continue_button@common.button": {
    "default_control": "default",
    "hover_control": "hover",
    "pressed_control": "pressed",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.menu_continue",
        "condition": "hover"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.menu_continue",
        "condition": "focus"
      }
    ],
    "controls": [
      { "default@common.button_default_state": { 
        "uv": [ 0, 66 ],
        "controls": [
          {"@common.button_text": {
            "text": "demo.help.later"
          }}
        ]
      }},
      { "hover@common.button_default_state": { 
        "uv": [ 0, 66 ],
        "controls": [
          {"@common.button_text": {
            "text": "demo.help.later",
            "color": [ 1.0, 1.0, 0.2 ]
          }}
        ]
      }},
      { "pressed@common.button_default_state": { 
        "alpha": 0.65,
        "controls": [
          {"@common.button_text": {
            "text": "demo.help.later",
            "color": [ 1.0, 1.0, 0.2 ],
            "alpha": 0.65
          }}
        ]
      }}
    ]
  },
  
  "buy_button@common.button": {
    "default_control": "default",
    "hover_control": "hover",
    "pressed_control": "pressed",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.menu_buy_game",
        "condition": "hover"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.menu_buy_game",
        "condition": "focus"
      }
    ],
    "controls": [
      { "default@common.button_default_state": { 
        "uv": [ 0, 66 ],
        "controls": [
          {"@common.button_text": {
            "text": "demo.help.buy"
          }}
        ]
      }},
      { "hover@common.button_default_state": { 
        "uv": [ 0, 66 ],
        "controls": [
          {"@common.button_text": {
            "text": "demo.help.buy",
            "color": [ 1.0, 1.0, 0.2 ]
          }}
        ]
      }},
      { "pressed@common.button_default_state": { 
        "alpha": 0.65,
        "controls": [
          {"@common.button_text": {
            "text": "demo.help.buy",
            "color": [ 1.0, 1.0, 0.2 ],
            "alpha": 0.65
          }}
        ]
      }}
    ]
  },

  "root_panel": {
    "type": "panel",
    "size": [ "80%", "70%" ],
    "anchor_to": "center",
    "anchor_from": "center"
  },

  "common_panel": {
    "type": "panel",
    "controls": [
      {"bg_image@normal_stroke_button": { "layer": 1 } },
      {"@trial_label": { } },
      {"buy@buy_button": {
        "size": [ "48%", "15%" ],
        "offset": [ "2%", "-3%" ],
        "anchor_to": "bottom_left",
        "anchor_from": "bottom_left"
      }},
      {"continue@continue_button": {
        "size": [ "48%", "15%" ],
        "offset": [ "-2%", "-3%" ],
        "anchor_to": "bottom_right",
        "anchor_from": "bottom_right"
      }}
    ]
  },

  "upsell_panel": {
    "type": "panel",
    "controls": [
      { "@trial_description_panel": { } }
    ]
  },

  "upsell_expired_panel": {
    "type": "panel",
    "controls": [
      { "@trial_expired_description_panel": { } }
    ]
  },

  "screen": {
    "type": "screen",
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "condition": "none"
      },
      {
        "from_button_id": "button.menu_up",
        "to_button_id": "button.menu_up",
        "condition": "none",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_down",
        "to_button_id": "button.menu_down",
        "condition": "none",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_left",
        "to_button_id": "button.menu_left",
        "condition": "none",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_right",
        "to_button_id": "button.menu_right",
        "condition": "none",
        "scope": "view"
      }
    ],
    "controls": [
      { "@menu_background": { } },
      { "@trialTime": { } },
      {
        "@root_panel": {
          "controls": [
            { "@common_panel": { } },
            { "@trial_description_panel": { } }
          ]
        }
      }
    ]
  },

  "expired_screen": {
    "type": "screen",
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "condition": "none"
      },
      {
        "from_button_id": "button.menu_up",
        "to_button_id": "button.menu_up",
        "condition": "none",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_down",
        "to_button_id": "button.menu_down",
        "condition": "none",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_left",
        "to_button_id": "button.menu_left",
        "condition": "none",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_right",
        "to_button_id": "button.menu_right",
        "condition": "none",
        "scope": "view"
      }
    ],
    "controls": [
      { "@menu_background": { } },
      { "@trialTime": { } },
      {
        "@root_panel": {
          "controls": [
            { "@common_panel": { } },
            { "@trial_expired_description_panel": { } }
          ]
        }
      }
    ]
  }
}
