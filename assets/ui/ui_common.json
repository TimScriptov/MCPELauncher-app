{
  "namespace": "common",


  //---------------------------------------------------------------------------
  // Common controls
  //---------------------------------------------------------------------------

  "button": {
    "type": "button",
    "layer": 1,
    "size": [ 100, 20 ],
    "sound_name": "random.click",
    "sound_volume": 1.0,
    "sound_pitch": 1.0,
    "default_control": "default",
    "hover_control": "hover",
    "pressed_control": "pressed",
    "focus_enabled": true,
    "button_mappings": [
      {"from_button_id": "button.menu_select",
       "to_button_id": "button.menu_select",
       "condition": "hover"
      },
      {"from_button_id": "button.menu_ok",
       "to_button_id": "button.menu_select",
       "condition": "focus"
      }
    ]
  },

  "tab": {
    "type": "tab",
    "layer": 1,
    "size": [ 100, 20 ],
    "button_mappings": [
      {"from_button_id": "button.menu_select",
       "to_button_id": "button.menu_select",
       "condition": "hover"
      },
      {"from_button_id": "button.menu_ok",
       "to_button_id": "button.menu_select",
       "condition": "focus"
      }
    ]
  },
  
  "tab_button@tab": {
    "sound_name": "random.click",
    "sound_volume": 1.0,
    "sound_pitch": 1.0,
    "default_control": "default",
    "hover_control": "hover",
    "pressed_control": "pressed"
  },
  
  "button_text": {
    "type": "label",
    "layer": 1,
    "shadow": true
  },

  "button_default_state": {
    "type": "image",
    "texture": "gui/gui.png",
    "layer": 2,
    "nineslice_size": 3.0,
    "uv": [ 0, 86 ],
    "uv_size": [ 200, 20 ],
    "tiled": true
  },

  "scroll": {
    "type": "scrollbar",
    "layer": 6,
    "sound_name": "random.click",
    "sound_volume": 1.0,
    "sound_pitch": 1.0,
    "focus_enabled": false,
    "always_listen_to_input": false,
    "always_handle_pointer": true,
    "dampening": 0.9,
    "scrollbar_box_track_button" : "button.scrollbar_skip_track",
    "scrollbar_touch_button" : "button.scrollbar_touch",
    "button_mappings": [
      {"from_button_id": "button.menu_select",
       "to_button_id": "button.scrollbar_skip_track",
       "condition": "hover"
      },
      {"from_button_id": "button.menu_select",
       "to_button_id": "button.scrollbar_touch",
       "condition": "content_panel_contained",
	   "consumes_next_event": false
      }
    ]
  },

  "scroll_box": {
    "type": "scrollbar_box",
    "layer": 7,
    "size": [ 16, 16 ],
    "sound_name": "random.click",
    "sound_volume": 1.0,
    "sound_pitch": 1.0,
    "focus_enabled": false,
    "contained": true,
    "draggable": "vertical",
    "button_mappings": [
      {"from_button_id": "button.menu_select",
       "to_button_id": "button.menu_select",
       "condition": "gesture"
      }
    ]
  },
	
    "default_indent": {
    "type": "image",
    "nineslice_size": 2.0,
    "texture": "gui/newgui/play_screen/Indent2.png",
    "uv": [ 0, 0 ],
    "uv_size": [ 5, 5 ]
  },

  "edit_box_indent@common.default_indent": {
    "controls": [
      {
        "focus_border": {
          "type": "image",
          "nineslice_size": 1.0,
          "texture": "gui/newgui/focusBorder.png",
          "uv": [ 0, 0 ],
          "uv_size": [ 5, 5 ]
        }
      }
    ]
  },

  "text_edit_box_label": {
    "type": "label",
    "alignment": "left_middle",
    "localize": false,
    "color": [ 1.0, 1.0, 1.0, 1.0 ],
    "shadow": false,
    "text": "#item_name",
    "bindings": [
      {
        "binding_name": "#text_box_item_name",
        "binding_name_override": "#item_name"
      }
    ]
  },

  "text_edit_box": {
    "type": "edit_box",
    "anchor_from": "center",
    "anchor_to": "center",
    "layer": 1,
    "focus_enabled": true,
    "enabled": "#enabled",
    "clips_children": true,
    "clip_offset": [ 1, 0 ],
    
    "bindings": [
      {
        "binding_name": "#text_box_enabled",
        "binding_name_override": "#enabled"
      }
    ],

    "default_control": "default",
    "hover_control": "hover",
    "pressed_control": "pressed",

    "max_length": 14,
    "text_type": "ExtendedASCII",
    "text_control": "display_text",

    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.menu_select",
        "handle_select": true,
        "condition": "hover"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.menu_select",
        "handle_select": true,
        "handle_deselect": true,
        "condition": "focus"
      },
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "handle_select": false,
        "handle_deselect": true,
        "condition": "none"
      }
    ],
    
    "controls": [
      {
        "display_text@common.text_edit_box_label": {
          "layer": 1,
          "offset": [ 2, 0 ]
        }
      },
      { "default@common.default_indent": { "allow_clipping": false } },
      { "hover@common.edit_box_indent": { "allow_clipping": false } },
      { "pressed@common.edit_box_indent": { "allow_clipping": false } }
    ]
  },

